---
import Navigation from '../components/Navigation.astro';

const { title = 'Dorian Kolis' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="notice">This site is in progress.</div>
    <Navigation />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .notice {
    top: 0;
    left: 0;
    width: 100%;
    padding: 0.6rem 1rem;
    background: #ffe9a8;
    color: #4a3b00;
    font-size: 0.9rem;
    text-align: center;
    border-bottom: 1px solid #e0c97a;
    z-index: 999;
  }
</style>
