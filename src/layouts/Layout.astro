---
import Navigation from '../components/Navigation.astro';

const { title = 'Dorian Kolis' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="notice">This site is in progress.</div>
    <Navigation />
    <slot />
    <footer class="footer">
      <div class="footer-content">
        <div class="footer-info">
          <p>
            © {new Date().getFullYear()} Dorian Kolis • <a
              href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
              target="_blank"
              rel="noopener">CC BY-NC-SA 4.0</a
            >
          </p>
          <p>
            Built with <a href="https://astro.build" target="_blank" rel="noopener">Astro</a> •
            <a
              href="https://github.com/MetalTurtle18/personal-website"
              target="_blank"
              rel="noopener"
              class="github-link"
            >
              View Source
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    margin: 0;
    padding: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }

  .notice {
    top: 0;
    left: 0;
    width: 100%;
    padding: 0.6rem 1rem;
    background: #ffe9a8;
    color: #4a3b00;
    font-size: 0.9rem;
    text-align: center;
    border-bottom: 1px solid #e0c97a;
    z-index: 999;
  }

  .footer {
    margin-top: 4rem;
    padding: 3rem 2rem 2rem;
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .footer-nav {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-nav a {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: #047857;
  }

  .footer-info {
    text-align: center;
    color: #6b7280;
    font-size: 0.9rem;
  }

  .footer-info p {
    margin: 0.5rem 0;
  }

  .footer-info a {
    color: #047857;
    text-decoration: none;
  }

  .footer-info a:hover {
    text-decoration: underline;
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .github-link svg {
    vertical-align: middle;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 2rem 1rem 1.5rem;
    }

    .footer-nav {
      gap: 1.5rem;
    }
  }
</style>
