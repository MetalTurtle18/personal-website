---
import { getCollection, render } from 'astro:content';
import MarkdownPost from '../../layouts/MarkdownPost.astro';

export async function getStaticPaths() {
  // In production, filter out drafts
  const posts = await getCollection('projects', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { project: post },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<MarkdownPost
  title={project.data.title}
  summary={project.data.summary ?? project.data.description}
  pubDate={project.data.pubDate}
  updateDate={project.data.updateDate}
  chronoDate={project.data.chronoDate}
  author={project.data.author}
  image={project.data.image}
  type="projects"
  draft={project.data.draft}
>
  <Content />
</MarkdownPost>
