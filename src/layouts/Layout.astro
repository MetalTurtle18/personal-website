---
import Navigation from '../components/Navigation.astro';
import headshot from '../assets/mugshot.jpg';
import { Icon } from 'astro-icon/components';

const { title = 'Dorian Kolis', url = Astro.url } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--OpenGraph tags-->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={headshot.src} />
    <meta
      property="og:description"
      content="Dorian Kolis is an engineer studying at Dartmouth College with extensive experience in engineering, programming, and biology"
    />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Dorian Kolis" />

    <!--Favicon-->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!--SEO-->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <!--TODO-->
    <meta name="robots" content="noindex" />

    <!--Import JetBrains Mono font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!--TODO: REMOVE NOTICE-->
    <div class="in-progress-notice">This site is in progress.</div>
    <Navigation />
    <slot />
    <footer class="footer">
      <div class="footer-content">
        <div class="footer-links">
          <a href="https://github.com/MetalTurtle18" target="_blank" rel="noopener">
            <Icon name="github" size="3rem" />
          </a>
          <a href="https://www.linkedin.com/in/dorian-kolis" target="_blank" rel="noopener">
            <Icon name="linkedin" size="3rem" />
          </a>
          <a href="https://orcid.org/0009-0004-5363-3730" target="_blank" rel="noopener">
            <Icon name="orcid" size="3rem" />
          </a>
          <a href="https://www.printables.com/@MetalTurtle" target="_blank" rel="noopener">
            <Icon name="printables" size="3rem" />
          </a>
          <a href="https://www.youtube.com/@MetalTurtle18" target="_blank" rel="noopener">
            <Icon name="youtube" size="3rem" />
          </a>
        </div>
        <div class="footer-attribution">
          <p>
            © 2026{new Date().getFullYear() !== 2026 ? '–' + new Date().getFullYear() : ''} Dorian Kolis
            • <a
              href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
              target="_blank"
              rel="noopener">CC BY-NC-SA 4.0</a
            >
          </p>
          <p>
            Built with <a href="https://astro.build" target="_blank" rel="noopener">Astro</a> •
            <a
              href="https://github.com/MetalTurtle18/personal-website"
              target="_blank"
              rel="noopener"
              class="github-view-source"
            >
              View Source
              <Icon name="github" size="16px" />
            </a>
          </p>
        </div>
        <div class="footer-ai-notice" title="Sorry, I still think I am a better writer.">
          <p>Unless otherwise indicated, no text content on this website is written with AI.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    margin: 0;
    padding: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      sans-serif;
    min-height: 100%;
    position: relative;
  }

  body {
    margin: 0 0 260px;
    padding: 0;
    min-height: 100vh;
  }

  .in-progress-notice {
    top: 0;
    left: 0;
    width: 100%;
    padding: 0.6rem 1rem;
    background: #ffe9a8;
    color: #4a3b00;
    font-size: 0.9rem;
    text-align: center;
    font-weight: bold;
    border-bottom: 1px solid #e0c97a;
    z-index: 999;
  }

  .footer {
    position: absolute;
    overflow: hidden;
    bottom: 0;
    width: 100%;
    margin-top: 4rem;
    padding: 3rem 2rem 2rem;
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    text-align: center;
    color: #6b7280;
    font-size: 0.9rem;
  }

  .footer-content p {
    margin: 0.3rem 0;
  }

  .footer-content a {
    color: #047857;
    text-decoration: none;
  }

  .footer-content a:hover {
    text-decoration: underline;
  }

  .footer-content a:has([data-icon]) {
    text-decoration: none;
  }

  .footer-links [data-icon] {
    width: 3rem;
    height: 3rem;
    border-radius: 0.5rem;
    padding: 0.3rem;
    transition: all 0.2s ease;
  }

  .footer-links [data-icon]:hover {
    box-shadow: 0.1rem 0.1rem 0.1rem black;
  }

  .footer-links [data-icon]:not([data-icon='youtube']) {
    /* Don't add the extra margin to YouTube since it is the last one */
    margin-right: 0.3rem;
  }

  .footer-links [data-icon='github'] {
    color: white;
    background: #181717;
  }

  .footer-links [data-icon='linkedin'] {
    color: white;
    background: #0e4fb5;
  }

  .footer-links [data-icon='orcid'] {
    color: white;
    background: #a6ce39;
  }

  .footer-links [data-icon='printables'] {
    color: white;
    background: #fa6831;
  }

  .footer-links [data-icon='youtube'] {
    color: white;
    background: #ff0000;
  }

  .github-view-source {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .github-view-source [data-icon='github'] {
    vertical-align: text-bottom;
  }

  .footer-ai-notice {
    text-align: center;
    background: white;
    border: 1px solid #047857;
    border-radius: 0.75rem;
  }

  .footer-ai-notice p {
    color: #6b7280;
    font-size: 0.7rem;
    padding: 0 0.3rem;
    margin: 0.5rem 0;
  }

  @media (max-width: 350px) {
    .footer-links [data-icon] {
      width: 2.4rem;
      height: 2.4rem;
    }
  }
</style>
