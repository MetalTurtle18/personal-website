---
const currentPath = Astro.url.pathname;

const navItems = [
  { path: '/', label: 'Home' },
  { path: '/about', label: 'About' },
  { path: '/projects', label: 'Projects' },
  { path: '/blog', label: 'Blog' },
];

function isActive(itemPath: string, currentPath: string): boolean {
  if (itemPath === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(itemPath);
}
---

<nav class="navigation">
  <ul class="nav-list">
    {
      navItems.map((item) => (
        <li>
          <a
            href={item.path}
            class:list={['nav-link', { active: isActive(item.path, currentPath) }]}
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .navigation {
    width: 100%;
    background: white;
    border-bottom: 1px solid #e5e5e5;
    padding: 1rem 0;
  }

  .nav-list {
    display: flex;
    justify-content: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
  }

  .nav-link {
    text-decoration: none;
    color: #555;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: #047857;
    background: #f0fdf4;
  }

  .nav-link.active {
    color: #047857;
    font-weight: 600;
    background: #d1fae5;
  }

  @media (max-width: 600px) {
    .nav-list {
      gap: 1rem;
    }

    .nav-link {
      padding: 0.4rem 0.8rem;
      font-size: 0.95rem;
    }
  }
</style>
