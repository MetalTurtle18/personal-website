---
import Layout from './Layout.astro';

interface Props {
  title: string;
  summary?: string;
  pubDate: Date;
  author: string;
  image?: { url: string; alt: string };
  type: 'blog' | 'projects';
}

const { title, summary, pubDate, author, image } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={title}>
  <article class="markdown-post">
    {
      image && (
        <div class="hero-image">
          <img src={image.url} alt={image.alt} />
        </div>
      )
    }
    <header class="post-header">
      <h1 class="post-title">{title}</h1>
      {summary ? <h3 class="post-summary">{summary}</h3> : null}
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <span class="meta-separator">â€¢</span>
        <span class="author">{author}</span>
      </div>
    </header>
    <div class="prose">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .markdown-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .hero-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .post-title {
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
    color: #000;
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: #777;
    margin-bottom: 1rem;
  }

  .meta-separator {
    color: #ccc;
  }

  .author {
    color: #555;
  }

  .post-tags {
    margin-top: 1rem;
  }

  .prose {
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
    font-size: 1.1rem;
    line-height: 1.7;
    color: #333;
  }

  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
    color: #000;
  }

  .prose :global(h1) {
    font-size: 2rem;
  }

  .prose :global(h2) {
    font-size: 1.75rem;
  }

  .prose :global(h3) {
    font-size: 1.5rem;
  }

  .prose :global(p) {
    margin: 1rem 0;
  }

  .prose :global(a) {
    color: #047857;
    text-decoration: none;
  }

  .prose :global(a:hover) {
    color: #065f46;
    text-decoration: underline;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin: 0.5rem 0;
  }

  .prose :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }

  .prose :global(pre) {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  .prose :global(blockquote) {
    border-left: 4px solid #e5e5e5;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #555;
    font-style: italic;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 1.5rem 0;
  }

  @media (max-width: 768px) {
    .markdown-post {
      padding: 1.5rem 1rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .prose {
      font-size: 1rem;
    }

    .prose :global(h1) {
      font-size: 1.75rem;
    }

    .prose :global(h2) {
      font-size: 1.5rem;
    }
  }
</style>
