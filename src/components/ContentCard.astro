---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  chronoDate?: Date;
  slug: string;
  image?: { url: string; alt: string };
  type: 'blog' | 'projects';
  draft: boolean;
}

const { title, description, pubDate, chronoDate, slug, image, type, draft } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const contentUrl = `/${type}/${slug}`;
---

<article class:list={['content-card', { 'content-card-draft': draft }]}>
  <a href={contentUrl} class="card-link">
    {
      image && (
        <div class="card-image">
          <img src={image.url} alt={image.alt} />
        </div>
      )
    }
    <div class="card-content">
      {draft && <h4 class="draft-label">DRAFT</h4>}
      <h2 class="card-title">{title}</h2>
      <time class="card-date" datetime={pubDate.toISOString()}>{formattedDate}</time>
      <p class="card-description">{description}</p>
    </div>
  </a>
</article>

<style>
  .content-card {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .content-card-draft {
    border-color: #f00;
  }

  .draft-label {
    color: #f00;
    margin: 0;
  }

  .content-card:hover {
    box-shadow: 0 4px 12px rgba(4, 120, 87, 0.15);
    transform: translateY(-2px);
    border-color: #047857;
  }

  .content-card:hover .card-title {
    color: #047857;
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: #f5f5f5;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .content-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.4rem;
    color: #000;
  }

  .card-date {
    display: block;
    font-size: 0.85rem;
    color: #777;
    margin-bottom: 0.75rem;
  }

  .card-description {
    margin: 0 0 1rem 0;
    color: #555;
    line-height: 1.5;
  }

  @media (max-width: 600px) {
    .card-content {
      padding: 1.25rem;
    }

    .card-title {
      font-size: 1.2rem;
    }
  }
</style>
